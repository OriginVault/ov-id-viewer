{
  "include": ["*.js", "*.ts", "**/*.ts", "**/*.tsx", "custom.d.ts", "vite.config.js", "src/**/*.ts", "src/**/*.tsx", "scripts/sign-release-metadata.js", "package.json"],
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "incremental": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020"
    ],
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "ES2020",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "lib", "server.js"]
}
